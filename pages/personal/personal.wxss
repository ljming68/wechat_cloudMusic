/* pages/personal/personal.wxss */
.personalContainer{
  width: 100%;
  height: 100%;
  
  
}
/* 用户部分 */

.user-section{
  height: 520rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}
.user-section .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.7;
  filter: blur(1px);
  


}
.user-section .user-info-box{
  height: 180rpx;
  display: flex;
  align-items: center;

  position: relative;
  /* z-index: 1; */
 

}
.user-info-box image{
  width: 130rpx;
  height: 130rpx;
  border:5rpx solid #fff;
  border-radius: 50%;
}

.user-info-box text{
  font-size: 32rpx;
  color: #303133;
  margin-left: 20rpx;
}


/* vip区域 */
.user-section .vip-card-box{
  position: relative;
  display: flex;
  flex-direction: column;
  background: linear-gradient(left, red, black);
  background: rgba(0, 0, 0, .7);
  height: 240rpx;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}

.vip-card-box .card-bg{
  position:absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.vip-card-box .btn{
  display: block;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 40rpx;
  z-index: 1;
  background: #f9e6af;
  color: #36343c;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;

}
.vip-card-box .tit {
  font-size: 22rpx;
  color: #f7d680;
  margin-bottom: 28rpx;
}
.vip-card-box .tit .iconfont{
  color: #f6e5a3;
  margin-right: 16rpx;
}
.vip-card-box .tit .vipName{
  font-size: 34rpx;
}

.vip-card-box .e-m{
  font-size: 34rpx;
  margin-top: 10rpx;
}
.vip-card-box .e-b{
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}

.cover-container{
  margin-top: -130rpx;
  padding: 0 30rpx;
  position:relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.cover-container .arc{
  
  position:absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
.cover-container .personalNav{
  width: 100%;
  background: #fff;
  display: flex;
  padding: 20rpx 0;
  border-radius: 15rpx;
  
}
.personalNav .navItem{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  

}

.navItem .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.navItem text{
  font-size: 22rpx;
}

.cover-container .personalContent{
  background: #fff;
  margin-top: 20rpx;
}

.personalContent .recentPlayContainer text{
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}

.personalContent .cardList{
  margin-top: 20rpx;
}
.cardList .cardItem{
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.cardItem .more{
  float: right;
}