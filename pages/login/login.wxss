/* pages/login/login.wxss */

.loginContainer{
  width: 100%;
  height: 100%;
  
}
.wrapper{
  /* background-color: plum; */
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;

}

.wrapper .welcome{
  font-size: 46rpx;
  color: #555;
  position: relative;
  left: 50rpx;
  top: 90rpx;
  
}
.wrapper .inputContent{
  padding: 0 60rpx;
  margin-top: 300rpx;
}
.inputContent .inputItem{
  display: flex;
  flex-direction: column;
  /* align-items: flex-start; */
  justify-content: center;
  padding: 0 30rpx;
  background:#f8f6fc;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;
  
}
.inputItem:last-child{
  margin-bottom: 0;
}
.inputItem text{
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.inputItem input{
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
}
.btn{
  width: 630rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #d43c33;
  color: #fff;
  font-size: 32rpx;
}
.fotget-section{
  font-size: 28rpx;
  color: #4399fc;
  text-align: center;
  margin-top: 40rpx;
}

.register-section{
  position: absolute;
  
  
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #606266;
  text-align: center;

}
.register-section text{
  color: #4399fc;
  margin-left: 10rpx;
}