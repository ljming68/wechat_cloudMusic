/* pages/recommendSong/recommendSong.wxss */

/* header */
.header{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.header image{
  width: 100%;
  height: 100%;
}
.header .dateShow{
  /* border: 1rpx solid red; */
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: aliceblue;
  font-size: 48rpx;
  font-weight: 900;

  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -50rpx;
  margin-left: -150rpx;


}

/* 推荐内容区域 */
.scrollList{
  height: calc(100vh - 382rpx);
}

.listContainer .listHeader{
 
  padding: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;

}
.listHeader .more{
  float: right;
}

/* 内容 */
.scrollList .scrollItem{
  width: 100%;
  display: flex;
  position: relative;
  margin-bottom: 20rpx;

}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
}
.scrollItem .songInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.songInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}

.iconfont{
  /* background-color: aqua; */
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  text-align: center;
  line-height: 80rpx;
 
}