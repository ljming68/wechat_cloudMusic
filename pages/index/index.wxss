/* pages/index/index.wxss */
/* 轮播图区域 */
.banners{
  width: 100%;
  height: 300rpx;

}
.banners image{
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navs{
  width: 100%;
  display: flex;

}
.navsItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  line-height: 100rpx;
  background-color: rgb(240,19,19);
  text-align: center;
  color: #fff;
  border-radius:50% ;
  margin: 20rpx 0;
}
text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  background-color: pink;
  padding: 20rpx;
  height: 360rpx;
}
.recommendContainer .header .title{
  font-size: 26rpx;
}
.recommendContainer .header text{
  font-size: 32rpx;
}
.recommendContainer .header .more{
  float: right;
  border: 1rpx solid black;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.recommendScroll{
  display: flex;
  height: 300rpx;
}
.recommendScroll .scrollItem{
  margin-right: 20rpx;
  width: 200rpx;
}
.recommendScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommendScroll .scrollItem text{
  display: block;
  /* 单行文本溢出 省略号代替  */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}

/* 排行榜区域 */
.topList{
  padding: 0 20rpx;
 
  /* background-color: rgb(143, 253, 91); */
}
.topListSwiper{
  height: 440rpx;
  background-color: greenyellow;
}

.swiperItem{
  width: 90% ;
  /* background-color: goldenrod; */
  

}
.swiperItem .title{
  font-size: 32rpx;
  font-weight: 900;
  line-height: 80rpx;
 
}

.musicItem{
  /* 当一个元素转换成flex布局时，他的子元素全部显示成block */
  height: 100rpx;
  line-height: 100rpx;
  display: flex; 
  margin-bottom: 20rpx;
  
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 2rpx;
 
}
.musicItem .order{
  width: 100rpx;
  text-align: center;
}