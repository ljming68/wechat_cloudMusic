<!--pages/video/video.wxml-->
<view class="videoContainer">
  <view class="search-header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="searchBtn">搜索音乐</view>
    <image src="/static/images/logo.png"></image>
  </view>
  <!-- 导航区域 -->
  <scroll-view class="navScroll" enable-flex scroll-x>
    <view class="scrollItem" wx:for="{{navDataList}}" wx:key="id">
      <view class=" navContent {{navId===item.id?'active':''}} " bindtap="changeNav" id="{{item.id}}" data-id="{{item.id}}">
        {{item.name}}
      </view>
    </view>
    
  </scroll-view>
  <!-- 视频列表区域 -->
  <scroll-view class="videoList">
    <view class="videoItem" wx:for="{{videoDataList}}" wx:key="id">
      <video 
      src="{{item.data.urlInfo.url}}" 
      object-fit="cover" 
      bindplay="handlePlay" 
      id="{{item.data.vid}}"
      class="common"
      wx:if="{{videoId===item.data.vid}}"
      

      ></video>
      <image wx:else class="common" src="{{item.data.coverUrl}}" bindtap="handlePlay" id="{{item.data.vid}}"></image>

      <view class="content">{{item.data.title}}</view>

      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-buoumaotubiao15"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun1"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo"></text>
          </button>
        </view>
      </view>

    </view>
  </scroll-view>


</view>
